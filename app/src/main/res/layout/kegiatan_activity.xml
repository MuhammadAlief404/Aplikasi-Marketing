<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnPiket"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/ic_kegiatan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piket"
        android:id="@+id/textView11"
        android:layout_below="@+id/btnPiket"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnPiket"
        android:textSize="30dp"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnKanvas"
        android:background="@mipmap/ic_kegiatan"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kanvasing"
        android:id="@+id/textView13"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/btnKanvas"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnKanvas" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnFollowup"
        android:background="@mipmap/ic_kegiatan"
        android:layout_above="@+id/textView11"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow Up"
        android:id="@+id/textView14"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/btnFollowup"
        android:layout_alignStart="@+id/btnFollowup" />
</RelativeLayout>