<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jumlah Flyer"
        android:id="@+id/textView45"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtFlyer"
        android:layout_alignBottom="@+id/textView45"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView45" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:id="@+id/btnTambah"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView88"
        android:layout_toEndOf="@+id/textView45" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@mipmap/ic_kanvas"
        android:layout_above="@+id/edtFlyer"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edtFlyer"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lokasi Kanvas"
        android:id="@+id/textView88"
        android:layout_alignBottom="@+id/edtLokasi"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtLokasi"
        android:layout_below="@+id/edtFlyer"
        android:layout_alignEnd="@+id/edtFlyer"
        android:layout_toEndOf="@+id/textView88" />

</RelativeLayout>